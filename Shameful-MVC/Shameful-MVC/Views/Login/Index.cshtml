@model Shameful_MVC.Views.Home.LoginViewModel
@{
    ViewBag.Title = "Home Page";
    Layout = null;
}

<!DOCTYPE html>

<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>Index</title>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    </head>
    <body>
        <h3>Login Form</h3>
        <form method="post">
            <div class="form-group">
                <label asp-for="FacultyNumber" class="control-label"></label>
                <input asp-for="FacultyNumber" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input type="password" asp-for="Password" class="form-control" />
            </div>
            <div class="form-group">
                <input asp-action="Login" type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
        <form method="post">
            <div class="form-group">
                <input asp-action="Register" type="submit" value="Register" class="btn btn-primary" />
            </div>
        </form>
        @{ 
            if (!Model.SuccessfulLogin)
            {
                <div class="form-group" > 
                    <span class="text-danger">Incorrect faculty number or password</span>
                </div>
            }
         }
    </body>
</html>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}